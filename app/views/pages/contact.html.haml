= content_for :title do
  Contact Us - Misawa Used Cars
%div#hero
  %header
    .row
      .small-6.small-centered.columns
        = image_tag 'contact/header/contact.svg', onerror: "this.onerror=null; this.src='/assets/contact/header/contact.png'"
      %h1
        Contact Us
      %p
        There are many ways to get in touch. Drop by the shop, give us a call, or send us an email.

%section#general-info
  .row
    .small-12.medium-4.columns
      = image_tag 'home/general-info/clock.svg', onerror: "this.onerror=null; this.src='/assets/home/general-info/clock.png'"
      %p
        0900-1730
        %br
        Monday-Saturday
        %br
        Appointments available
    .smal-12.medium-4.columns
      = image_tag 'home/general-info/phone.svg', onerror: "this.onerror=null; this.src='/assets/home/general-info/phone.png'"
      %p
        %a{ href: 'tel:0176-58-6903' } 0176-58-6903
        %br
        %a{ href: 'tel:080-4058-5771' } 080-4058-5771
        %br
        %a{ href: 'mailto:sales@mvpusedcars.com' } Sales@MVPUsedCars.com
    .small-12.medium-4.columns
      = image_tag 'home/general-info/location.svg', onerror: "this.onerror=null; this.src='/assets/home/general-info/location.png'"
      %p
        Exit the POL/Falcon Gate. Continue straight until the first stop light.
        MVP Used Cars will be on right
#send-us-a-message
  .row
    .small-12.small-centered.columns
      %h2
        Send us a message
%section#email-form
  .row
    .small-12.columns
    = form_for @message, url: contact_create_path, html: {  class: 'large-12 columns', data: { abide: true } } do |f|
      .row
        .sweet-honey
          = f.label :sweet_honey, "This is a honeypot, if you see this you're CSS is turned off or you're a bot. If you're not a bot don't fill it in."
          = f.text_field :sweet_honey
        .small-12.columns
          = f.label :name
          %span.user-icon
          = f.text_field( :name, placeholder: 'Name*', 'required pattern' => '[a-zA-Z]' )
          %small.error
            Name is required
        .small-12.columns
          = f.label :email
          %span.email-icon
          = f.email_field( :email, placeholder: 'Email Address*', pattern: 'email', required: true )
          %small.error
            Please enter a valid email
        .small-12.columns
          = f.label :phone
          %span.phone-icon
          = f.telephone_field( :phone, placeholder: 'Phone number' )
        .small-12.columns
          = f.label :subject
          %span.subject-icon
          = f.text_field( :subject, placeholder: 'Subject', value: @subject )
        #form-message.small-12.columns
          = f.label :body
          %span.message-icon
          = f.text_area( :body, placeholder: 'Message*', required: true )
          %small.error
            Message is required
        .small-12.columns
          = f.submit( 'Send', class: 'button small small-12 columns' )
#connect-with-us
  .div
    .row
      .small-12.small-centered.columns
        %h3
          %span
            or
          %br
          Connect with Us
  .row
    #social-links.small-12.medium-4.medium-centered.columns
      %ul.inline-list
        %li
          %a.facebook{ href: '#' }
        %li
          %a.twitter{ href: '#' }
        %li
          %a.gplus{ href: '#' }
        %li
          %a.pinterest{ href: '#' }
