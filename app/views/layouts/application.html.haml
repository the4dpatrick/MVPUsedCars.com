!!! 5

/[if lt IE 7]
  %html.no-js.lt-ie9.lt-ie8.lt-ie7{ lang: 'en' }
/[if IE 7]
  %html.no-js.lt-ie9.lt-ie8{ lang: 'en' }
/[if IE 8]
  %html.no-js.lt-ie9{ lang: 'en' }
/[if gt IE 8]
%html.no-js{lang: 'en', dir: "ltr", "xmlns:fb": "http://www.facebook.com/2008/fbml", "xmlns:og": "http://ogp.me/ns#"}
  / <![endif]
  %head
    = render 'layouts/meta_tags'
    %title
      = content_for?(:title) ? yield(:title) + " | MVP Used Cars" : "MVP Used Cars"
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Lato:300,400,700"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    - if Rails.env.production?
      = render 'shared/google_analytics'

  %body{ id: "#{ body_id }" }
    -# render navigation based on if within one of the `pages` pages
    - unless controller_name  == 'cars' && action_name == 'show'
      = render 'layouts/nav_main'
    - else
      = render 'layouts/nav_car_details'
    %main
      = render 'layouts/flash'
      = yield
      - unless controller_name == 'sessions'
        = render 'layouts/footer'
    = javascript_include_tag "application"
