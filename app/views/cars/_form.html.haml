= form_for @car do |f|
  - if @car.errors.any?
    #error_explanation
      %h2
        = pluralize @car.errors.count, "error"
        prohibited this car from being saved:
      %ul
        = @car.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :make
    %br
    = f.text_field :make
  .field
    = f.label :model
    %br
    = f.text_field :model
  .field
    = f.label :year
    %br
    = f.text_field :year
  .field
    = f.label :seats
    %br
    = f.text_field :seats
  .field
    = f.label :transmission
    %br
    = f.text_field :transmission
  .field
    = f.label :drive
    %br
    = f.text_field :drive
  .field
    = f.label :interior
    %br
    = f.text_field :interior
  .field
    = f.label :exterior
    %br
    = f.text_field :exterior
  .actions
    = f.submit
